{
    "compilerOptions": {
        "allowJs": true,
        "module": "commonjs",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "dist",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "jsx": "react",
        "paths": {
            "*": ["node_modules/*"]
        },
        "typeRoots": ["./node_modules/@types", "./src/types"]
    },
    "include": ["src/**/*"]
}
